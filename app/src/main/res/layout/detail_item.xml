<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        >

        <TextView android:id="@+id/tv_one_bill_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03-31"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <TextView android:id="@+id/tv_one_bill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:text="12:00"
            />

    </LinearLayout>

    <!--<com.wt.first.CustomView.CircleHead-->
        <!--android:id="@+id/bill_type"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--wt:src="@drawable/tx"-->
        <!--/>-->
    <ImageView android:id="@+id/bill_type"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        >

        <TextView android:id="@+id/tv_one_bill_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <TextView android:id="@+id/tv_one_bill_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="这是一条测试的数据你知道吗，这只是测试"

            />

    </LinearLayout>

</LinearLayout>